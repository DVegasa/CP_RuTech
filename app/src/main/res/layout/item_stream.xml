<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/black"
        tools:ignore="HardcodedText"
        android:id="@+id/clStream">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivAva"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/face0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12sp"
            app:layout_constraintTop_toTopOf="@id/ll"
            app:layout_constraintBottom_toBottomOf="@id/ll"/>

    <LinearLayout
            android:id="@+id/ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivAva"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp">

        <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home matters: Spatial Computing in everyday spaces"
                android:textColor="@color/yellow"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tvSpeaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eduard Khalturin"
                android:textColor="@color/white"
                android:textSize="13sp"/>

        <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15:00 - 15:50"
                android:textColor="@color/white"
                android:textSize="13sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>